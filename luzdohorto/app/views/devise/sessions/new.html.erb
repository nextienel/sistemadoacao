<div class="login-home cimg">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container  col-md-offset-4 col-md-4 panel-center-login" >
    <br>
    <br>
    <br>
    <br>
    <br>
    <br><br>
    <br>
    <br>
    <div class="panel panel-default">
      <div class="panel-heading login-color">
        <div class="text-center login-color-text"><%= image_tag("luz.png") %></div>
      </div>
      <div class="panel-body">
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon">
              <i class="ls-ico-user" style="width: auto"></i>
            </span>
            <%= f.text_field :login, autofocus: true, placeholder: "UsuÃ¡rio", class: "form-control" %>
          </div>
        </div>
