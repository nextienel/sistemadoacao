     <center><div class="alert alert-success" role="alert" style="width: 700px">
        <p id="notice" style="font-size: 15px"><%= notice %></p>
      </div></center>
    <% end %>
    <% if alert.present? %>
      <center><div class="alert alert-danger" role="alert" style="width: 700px">
        <p id="notice" style="font-size: 15px"><p id="alert"><%= alert %></p>
      </div></center>
    <% end %>

   
  </div>
   <%= yield %>
