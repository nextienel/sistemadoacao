
<div class="table-responsive" align="center">
    <h1>Lista de Usuários</h1>
    
    <br>
    <table class="table-striped">
      <tr  height="20">
        <th width="150"><p>Usuário</p></th>                              
      </tr>       
        <% @users.each do |user| %>
        <tr height="25">              
          <td align="center"><%= user.email %></td>          
          <td align="center">
            <div class="btn-group btn-group-xs">
              <button type="button" ><%= link_to 'Editar', edit_user_path(user) %></button>
              <button type="button" ><%= link_to 'Excluir', user, method: :delete, data: { confirm: 'Tem certeza que deseja excluir o registro?' } %></button>
            </div>
          </td>
        </tr>
          <% end %> 
    </table>
  </div>
